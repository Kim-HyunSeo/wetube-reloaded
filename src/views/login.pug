extends base

block content
    if errorMessage
        span=errorMessage
    form(method="POST")
        input(placeholder="UserName",name="username", type="text", required)
        input(placeholder="Password",name="password", type="password", required)
        br
        a(href="/users/github") Continue with GitHub &rarr;
    div
        span Don't have an account?
        a(href="/join") &nbsp;Create Now &rarr;