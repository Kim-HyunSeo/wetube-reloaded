extends base

block content
    if errorMessage
        span=errorMessage
    form(method="POST", action="/video/upload")
        input(placeholder="Title", required, type="text", name="title", minLength=1, maxLength=20)
        input(placeholder="Description", required, type="text", name="description", minLength=20, maxLength=150) 
        input(placeholder="Hashtags, separated by comma.", required, type="text", name="hashtags")
        input(type="submit", value="Upload Video")